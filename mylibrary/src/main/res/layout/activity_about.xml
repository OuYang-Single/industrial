<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel"  type="com.ijcsj.mylibrary.viewmodel.AboutViewModel"/>
        <variable name="data"  type="com.ijcsj.common_library.bean.AboutBean"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">

        <com.ijcsj.ui_library.widget.CommonTitleBar
            android:id="@id/top_bar"
            app:showBottomLine="false"
            app:centerTextSize="18dp"
            app:centerTextColor="#000000"
            app:titleBarColor="#FFFFFF"
            app:statusBarColor="#00FFFFFF"
            app:statusBarMode="dark"
            app:leftType="textView"
            app:leftDrawable="@mipmap/fanhui_icon_left"
            app:rightType="imageButton"
            app:rightImageResource="@mipmap/fenxiang_icon"
            app:centerType="textView"
            app:centerText="关于应用"
            app:titleBarHeight="88dp"
            app:fillStatusBar="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_marginTop="88dp"
        android:id="@+id/content"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        android:layout_height="match_parent">
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/img_about_icon"
            binding:placeholderRes="1"
            android:scaleType="centerCrop"
            binding:url="@{data.branch_icon}"
            android:layout_marginTop="45dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="140dp"
            android:layout_height="140dp"/>
        <TextView
            app:layout_constraintTop_toBottomOf="@+id/img_about_icon"
            android:id="@+id/tv_audio_name"
            android:text="@{data.software_name}"
            android:layout_marginTop="30dp"
            android:textColor="#fffe8400"
            android:textSize="26dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_audio_tips1_value"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_audio_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@{data.software_version}"
            android:textColor="#ff666666"
            android:textSize="14dp"
            />
        <com.hjq.shape.view.ShapeTextView
            android:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_audio_tips1_value"
            android:layout_width="wrap_content"
            app:shape="rectangle"
            android:paddingVertical="8dp"
            android:paddingHorizontal="44dp"
            android:id="@+id/st_"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textColor="#F6F6F6"
            android:textSize="14dp"
            android:text="@{data.btn_text}"
            binding:onClickCommand="@{viewModel.onCopyClick}"
            android:orientation="vertical"
            app:shape_solidColor="#FE8400"
            app:shape_radius="6dp"
            android:layout_height="36dp"/>
        <TextView
            android:id="@+id/tv_audio_wx"
            android:layout_marginTop="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/st_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.data.text1}"
            android:textColor="#ff999999"
            android:textSize="14dp"
            />

        <TextView
            android:text="@{viewModel.data.text2}"
            android:textColor="#ff999999"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_audio_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:gravity="center"
            android:layout_marginHorizontal="83dp"
            android:layout_marginBottom="13dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_audio_copyright_cn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="19dp"
                android:text="@{data.tips1_txt}"
                binding:onClickCommand="@{viewModel.onTxt1Click}"
                android:textColor="#fffe8400"
                android:textSize="14dp"
                />
            <TextView
                android:background="#646464"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="19dp"
                binding:onClickCommand="@{viewModel.onTxt2Click}"
                android:text="@{data.tips2_txt}"
                android:textColor="#fffe8400"
                android:textSize="14dp"
                />
            <TextView
                android:background="#646464"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="19dp"
                android:text="@{data.tips3_txt}"
                binding:onClickCommand="@{viewModel.onTxt3Click}"
                android:textColor="#fffe8400"
                android:textSize="14dp"
                />
        </LinearLayout>
        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_copyright_en"
            android:layout_marginBottom="8dp"
            android:id="@+id/tv_audio_copyright_cn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.copyright_cn}"
            android:textColor="#ff808080"
            android:textSize="14dp"
            />
        <TextView
            android:id="@+id/tv_copyright_en"
            android:text="@{data.copyright_en}"
            android:textColor="#ff9a9a9a"
            android:textSize="12dp"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>