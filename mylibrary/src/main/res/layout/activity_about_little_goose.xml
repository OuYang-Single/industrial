<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel"  type="com.ijcsj.mylibrary.viewmodel.AboutViewModel"/>
        <variable name="data"  type="com.ijcsj.mylibrary.bean.LittleGooseAbout"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="match_parent">
        <com.hjq.shape.view.ShapeTextView
            android:layout_width="match_parent"
            app:shape="rectangle"
            android:orientation="vertical"
            app:shape_endColor="#FFFFFF"
            app:shape_centerColor="#332585F5"
            app:shape_angle="80"
            app:shape_centerX="0"
            app:shape_centerY="300"
            app:shape_startColor="#E62585F5"
            android:layout_height="match_parent"/>

        <com.ijcsj.ui_library.widget.CommonTitleBar
            android:id="@id/top_bar"
            app:showBottomLine="false"
            app:centerTextSize="18dp"
            app:centerTextColor="#fff"
            app:titleBarColor="#00FFFFFF"
            app:statusBarColor="#00FFFFFF"
            app:statusBarMode="dark"
            app:leftType="textView"
            app:leftDrawable="@mipmap/fanhui_icon_left_when"
            app:centerType="textView"
            app:centerText=""
            app:titleBarHeight="88dp"
            app:fillStatusBar="true"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.hjq.shape.view.ShapeTextView
            android:layout_width="match_parent"
            app:shape="rectangle"
            app:shape_radius="20dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="134dp"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            app:shape_endColor="#FFFFFF"
            app:shape_startColor="#FFFFFF"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="180dp"
            android:id="@+id/cv_img"
            android:layout_marginTop="89dp"
            >
            <ImageView
                binding:placeholderRes="1"
                binding:url="@{data.branch_icon}"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv_software_name"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/cv_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{data.software_name}"
            android:textColor="#fffe8400"
            android:textSize="26dp"
            />
        <TextView
            android:id="@+id/tv_office_url"
            app:layout_constraintTop_toBottomOf="@+id/tv_software_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="128dp"
            android:layout_height="21dp"
            android:text="@{data.office_url}"
            android:textColor="#fffe8400"
            android:textSize="16dp"
            />
        <ImageView
            android:id="@+id/img_office_image"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="26dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_software_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            binding:placeholderRes="1"
            binding:url="@{data.office_image}"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="173dp"/>
        <TextView
            android:text="@{data.company_introduct}"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/img_office_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff333333"
            android:textSize="16dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>