<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.cn.setuplibrary.viewmodel.SettingUserViewModel" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content"
        android:visibility="@{viewModel.settingUserBean.password?View. GONE:View.VISIBLE}"
        android:layout_marginLeft="14dp"
        android:paddingRight="22dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户参数设置"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@+id/tv_user_title"
            android:textSize="11sp"
            />
        <com.hjq.shape.layout.ShapeRelativeLayout

            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_user_title"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/rv_start_mode"
            android:layout_width="0dp"
            android:layout_height="34dp"
            app:shape="rectangle"
            app:shape_radius="2dp"
            app:shape_solidColor="#CC000C36"
            app:shape_strokeColor="#1B56A5"
            app:shape_strokeWidth="0.33dp" >
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:id="@+id/tv_start_mode_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="启动方式"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                />

            <ImageView
                android:id="@+id/img_start_mode_name_arrow"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_arrows"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_mode_name"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_start_mode_name_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.settingUserBean.startMode}"
                android:textColor="#ff909090"
                android:textSize="11sp"
                />
        </com.hjq.shape.layout.ShapeRelativeLayout>

        <TextView
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/rv_start_mode"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="强制动作"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@+id/tv_force_on"
            android:textSize="11sp"
            />

        <com.hjq.shape.layout.ShapeRelativeLayout
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_force_on"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/rv_forced_cooling"
            binding:onClickCommand="@{viewModel.onBurialClick}"
            android:layout_width="0dp"
            android:layout_height="34dp"
            app:shape="rectangle"
            app:shape_radius="2dp"
            app:shape_solidColor="#CC000C36"
            app:shape_strokeColor="#1B56A5"
            app:shape_strokeWidth="0.33dp" >
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="强制冷却"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                />

            <ImageView
                android:id="@+id/img_forced_cooling_arrow"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_arrows"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_forced_cooling"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_forced_cooling_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.settingUserBean.burial}"
                android:textColor="#ff909090"
                android:textSize="11sp"
                />
        </com.hjq.shape.layout.ShapeRelativeLayout>

        <com.hjq.shape.layout.ShapeRelativeLayout
            android:layout_marginTop="8dp"
            binding:onClickCommand="@{viewModel.onForcedClick}"
            app:layout_constraintTop_toBottomOf="@+id/rv_forced_cooling"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/rv_forced_emptying"
            android:layout_width="0dp"
            android:layout_height="34dp"
            app:shape="rectangle"
            app:shape_radius="2dp"
            app:shape_solidColor="#CC000C36"
            app:shape_strokeColor="#1B56A5"
            app:shape_strokeWidth="0.33dp" >
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="强制排空"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                />

            <ImageView
                android:id="@+id/img_forced_emptying_arrow"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_arrows"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_forced_emptying"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_forced_emptying_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.settingUserBean.drain}"
                android:textColor="#ff909090"
                android:textSize="11sp"
                />
        </com.hjq.shape.layout.ShapeRelativeLayout>

        <TextView
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/rv_forced_emptying"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统设置"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:id="@+id/tv_system_settings"
            android:textSize="11sp"
            />

        <com.hjq.shape.layout.ShapeRelativeLayout
            android:layout_marginTop="8dp"
            binding:onClickCommand="@{viewModel.onTimeClick}"
            app:layout_constraintTop_toBottomOf="@+id/tv_system_settings"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/rv_backlight_time"
            android:layout_width="0dp"
            android:layout_height="34dp"
            app:shape="rectangle"
            app:shape_radius="2dp"
            app:shape_solidColor="#CC000C36"
            app:shape_strokeColor="#1B56A5"
            app:shape_strokeWidth="0.33dp" >
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="背光时间"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                />

            <ImageView
                android:id="@+id/img_backlight_time_arrow"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_arrows"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_backlight_time"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_backlight_time_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.settingUserBean.timeOut}"
                android:textColor="#ff909090"
                android:textSize="11sp"
                />
        </com.hjq.shape.layout.ShapeRelativeLayout>

        <com.hjq.shape.layout.ShapeRelativeLayout
            android:layout_marginTop="8dp"
            binding:onClickCommand="@{viewModel.onPasswordClick}"
            app:layout_constraintTop_toBottomOf="@+id/rv_backlight_time"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/rv_password_modification"
            android:layout_width="0dp"
            android:layout_height="34dp"
            app:shape="rectangle"
            app:shape_radius="2dp"
            app:shape_solidColor="#CC000C36"
            app:shape_strokeColor="#1B56A5"
            app:shape_strokeWidth="0.33dp" >
            <TextView
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码修改"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                />

            <ImageView
                android:id="@+id/img_password_modification_arrow"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_right_arrows"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:id="@+id/tv_password_modification_arrow"
                android:layout_marginRight="12dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/img_password_modification_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ff909090"
                android:textSize="11sp"
                />
        </com.hjq.shape.layout.ShapeRelativeLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentc"
        android:visibility="@{viewModel.settingUserBean.password?View.VISIBLE:View.GONE}"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_account_number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="66dp"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号："
            android:textColor="#ff929292"
            android:textSize="11sp"
            />
        <TextView
            app:layout_constraintLeft_toRightOf="@+id/tv_account_number"
            app:layout_constraintTop_toTopOf="@+id/tv_account_number"
            app:layout_constraintBottom_toBottomOf="@+id/tv_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:text="510000198607033228"
            android:textColor="#ff929292"
            android:textSize="11sp"
            />
        <TextView
            android:id="@+id/tv_password"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_number"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码："
            android:textColor="#ff929292"
            android:textSize="11sp"/>
        <TextView
            app:layout_constraintTop_toTopOf="@+id/tv_password"
            app:layout_constraintBottom_toBottomOf="@+id/tv_password"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="5dp"
            android:layout_marginLeft="110dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#E94238"
            android:textSize="11sp"/>
        <com.hjq.shape.layout.ShapeRelativeLayout
            android:layout_marginLeft="29dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_password"
            app:layout_constraintTop_toTopOf="@+id/tv_password"
            app:layout_constraintBottom_toBottomOf="@+id/tv_password"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            app:shape="rectangle"
            app:shape_radius="2dp"
            android:layout_marginRight="6dp"
            app:shape_solidColor="#CC000C36"
            app:shape_strokeColor="#1B56A5"
            app:shape_strokeWidth="0.33dp" >

            <EditText
                android:layout_marginHorizontal="9dp"
                android:gravity="center|left"

                android:text="@={viewModel.password.password}"
                android:textColorHint="#ff909090"
                android:textColor="#ff909090"
                android:textSize="11sp"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_pid_p"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.hjq.shape.layout.ShapeRelativeLayout>

        <TextView
            android:id="@+id/tv_confirm_password"
            app:layout_constraintTop_toBottomOf="@+id/tv_password"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="58dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textColor="#ff929292"
            android:textSize="11sp"/>
        <TextView
            app:layout_constraintTop_toTopOf="@+id/tv_confirm_password"
            app:layout_constraintBottom_toBottomOf="@+id/tv_confirm_password"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="5dp"
            android:layout_marginLeft="110dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:textColor="#E94238"
            android:textSize="11sp"/>
        <com.hjq.shape.layout.ShapeRelativeLayout
            android:layout_marginLeft="29dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_confirm_password"
            app:layout_constraintTop_toTopOf="@+id/tv_confirm_password"
            app:layout_constraintBottom_toBottomOf="@+id/tv_confirm_password"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            app:shape="rectangle"
            app:shape_radius="2dp"
            android:layout_marginRight="6dp"
            app:shape_solidColor="#CC000C36"
            app:shape_strokeColor="#1B56A5"
            app:shape_strokeWidth="0.33dp" >

            <EditText
                android:layout_marginHorizontal="9dp"
                android:gravity="center|left"
                android:textColorHint="#ff909090"
                android:textColor="#ff909090"
                android:textSize="11sp"
                android:text="@={viewModel.password.passwordConfirm}"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_pid_p"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.hjq.shape.layout.ShapeRelativeLayout>

        <com.hjq.shape.view.ShapeTextView
            binding:onClickCommand="@{viewModel.onClickStartMode}"
            app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password"
            app:layout_constraintLeft_toRightOf="@+id/tv_confirm_password"
            android:layout_marginTop="84dp"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_marginLeft="56dp"
            app:shape="rectangle"
            android:text="保  存"
            android:textColor="#ffffffff"
            android:textSize="9sp"
            app:shape_radius="3dp"
            app:shape_solidColor="#3465FF"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>