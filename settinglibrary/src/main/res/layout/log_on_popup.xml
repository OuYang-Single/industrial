<?xml version="1.0" encoding="utf-8"?>
<com.hjq.shape.layout.ShapeRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape="rectangle"
    app:shape_radius="12dp"
    android:paddingBottom="20dp"
    app:shape_solidColor="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_title"
        android:text="登录"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_title_p"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="29dp"
        android:text="510000198607033228"
        android:textColor="#ff929292"
        android:textSize="13sp"
        />
    <com.hjq.shape.layout.ShapeRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        app:shape="rectangle"
        android:id="@+id/selection_type"
        android:gravity="center"
        app:shape_radius="2dp"
        android:layout_marginLeft="29dp"
        android:layout_below="@+id/tv_title_p"
        android:layout_marginRight="29dp"
        app:shape_solidColor="#CCFFFFFF"
        app:shape_strokeColor="#1B56A5"
        app:shape_strokeWidth="0.33dp" >
        <EditText
            android:inputType="textMultiLine"
            android:maxLines="1"
            android:id="@+id/et_poople"
            android:hint="请输入密码"
            android:textSize="11sp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@null"
            android:layout_below="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.hjq.shape.layout.ShapeRelativeLayout>

    <com.hjq.shape.view.ShapeTextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/selection_type"
        android:layout_width="80dp"
        android:id="@+id/log_on"
        android:layout_centerHorizontal="true"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_marginLeft="11dp"
        app:shape="rectangle"
        android:text="登  录"
        android:textColor="#ffffffff"
        android:textSize="9sp"
        app:shape_radius="3dp"
        app:shape_solidColor="#3465FF"/>
    <ImageView
        android:id="@+id/img_close"
        android:src="@mipmap/ic_close"
        android:layout_alignParentEnd="true"
        android:layout_width="40dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:padding="12dp"
        android:layout_height="40dp"/>


</com.hjq.shape.layout.ShapeRelativeLayout>