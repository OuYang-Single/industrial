<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <variable name="viewModel"  type="com.cn.datalibrary.viewmodel.HistoryViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginLeft="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_query"
            android:onClick="@{viewModel.onClickQuery}"
            android:paddingHorizontal="19dp"
            android:paddingVertical="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="18dp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:text="查询"
            android:textSize="10dp"
            app:shape="rectangle"
            app:shape_solidDisabledColor="#061848"
            app:shape_radius="2dp"
            app:shape_solidColor="#4369F1" />
        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_end_date"
            android:paddingHorizontal="9dp"
            android:paddingVertical="7dp"
            android:minWidth="95dp"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_query"
            android:layout_marginRight="18dp"
            android:textColor="#606060"
            android:gravity="center"
            android:onClick="@{viewModel.onClickEndTime}"
            android:text="@{viewModel.dataHistoryBase.endTime}"
            android:textSize="11dp"
            app:shape="rectangle"
            app:shape_radius="2dp"
            app:shape_solidColor="#061848"
            app:shape_strokeColor="#1B56A5"
            app:shape_strokeWidth="0.33dp" />
        <TextView
            android:id="@+id/tv_segmentation"
            android:textColor="#606060"
            android:text="至"
            android:textSize="11dp"
            android:layout_marginHorizontal="7dp"
            app:layout_constraintTop_toTopOf="@+id/tv_end_date"
            app:layout_constraintBottom_toBottomOf="@+id/tv_end_date"
            app:layout_constraintRight_toLeftOf="@+id/tv_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_start_date"
            android:paddingHorizontal="9dp"
            android:paddingVertical="7dp"
            android:minWidth="95dp"
            android:onClick="@{viewModel.onClickStartTime}"

            android:layout_width="99dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_segmentation"
            android:layout_marginRight="7dp"
            android:textColor="#606060"
            android:gravity="center"
            android:text="@{viewModel.dataHistoryBase.startTime}"
            android:textSize="11dp"
            app:shape="rectangle"
            app:shape_radius="2dp"
            app:shape_solidColor="#061848"
            app:shape_strokeColor="#1B56A5"
            app:shape_strokeWidth="0.33dp" />
        <TextView
            android:id="@+id/tv_data_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期范围："
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toTopOf="@+id/tv_start_date"
            app:layout_constraintBottom_toBottomOf="@+id/tv_start_date"
            app:layout_constraintRight_toLeftOf="@+id/tv_start_date"
            android:textColor="#ffffffff"
            android:textSize="11sp"
            />
        <LinearLayout
            android:id="@+id/ll_history"
            android:background="#00205E"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_start_date"
            app:layout_constraintRight_toRightOf="@+id/tv_query"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="23dp">
            <TextView
                android:layout_marginLeft="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="序号"
                android:textColor="#ffffffff"
                android:textSize="10dp"
                />

            <TextView
                android:layout_marginLeft="86dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障原因"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                />

            <TextView
                android:layout_marginLeft="96dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="故障时间"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                />
            <TextView
                android:layout_marginLeft="81dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态"
                android:textColor="#ffffffff"
                android:textSize="10sp"
                />
        </LinearLayout>


        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@+id/ll_history"
            app:layout_constraintRight_toRightOf="@+id/tv_query"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="220dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:id="@+id/rv_historys"
            />
        <FrameLayout
           android:id="@+id/content"
            app:layout_constraintTop_toBottomOf="@+id/ll_history"
            app:layout_constraintRight_toRightOf="@+id/tv_query"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="0dp"
            android:layout_height="220dp">
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/rv_history"
                />
        </FrameLayout>
        <LinearLayout
            android:layout_marginTop="9dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.hjq.shape.layout.ShapeLinearLayout
                android:orientation="horizontal"
                android:id="@+id/sl_left"
                binding:onClickCommand="@{viewModel.onClickLeft}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                binding:left_right_button="@{viewModel.dataHistoryBase.leftProhibit}"
                binding:type_button="@{0}"
                android:gravity="center"
                app:shape="rectangle"
                app:shape_radius="4dp"
                app:shape_solidColor="#4369F1"
                app:shape_solidDisabledColor="#061848" >
                <ImageView
                    android:id="@+id/img_left"
                    android:layout_marginLeft="5dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_left_arrow"
                    app:tint="#999999" />
                <TextView
                    android:id="@+id/tv_left"
                    android:layout_marginVertical="3dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上一页"
                    android:textColor="#999999"
                    android:textSize="8dp"
                    />
            </com.hjq.shape.layout.ShapeLinearLayout>

            <TextView
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.dataHistoryBase.currentPage}"
                android:textColor="#ff999999"
                android:textSize="8sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / "
                android:textColor="#ff999999"
                android:textSize="8sp"
                />
            <TextView
                android:layout_marginRight="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.dataHistoryBase.commonPage}"
                android:textColor="#ff999999"
                android:textSize="8sp"
                />
            <com.hjq.shape.layout.ShapeLinearLayout
                android:id="@+id/sl_right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                binding:onClickCommand="@{viewModel.onClickRight}"
                binding:left_right_button="@{viewModel.dataHistoryBase.rightProhibit}"
                binding:type_button="@{1}"
                android:gravity="center"
                app:shape="rectangle"
                app:shape_radius="4dp"
                app:shape_solidColor="#4369F1"
                app:shape_solidDisabledColor="#061848" >
                <TextView
                    android:id="@+id/tv_right"
                    android:layout_marginVertical="3dp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下一页"
                    android:textColor="#999999"
                    android:textSize="8dp"
                    />
                <ImageView
                    android:id="@+id/img_right"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_right_arrow"
                    app:tint="#999999" />

            </com.hjq.shape.layout.ShapeLinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>