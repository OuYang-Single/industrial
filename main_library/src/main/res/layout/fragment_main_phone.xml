<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <import type="android.text.InputType" />
        <variable name="viewModel"  type="com.cn.main_library.viewmodel.MainViewModel"/>
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:background="#FFFFFF"
        android:id="@+id/content"
        android:layout_height="match_parent">

        <com.hjq.shape.layout.ShapeRelativeLayout
            android:id="@+id/sl_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:shape="rectangle"
            app:shape_bottomLeftRadius="17dp"
            app:shape_bottomRightRadius="17dp"
            app:shape_solidColor="#E1E9FF"
            android:layout_width="match_parent"
            android:layout_height="185dp"/>

        <ImageView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_clg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="18dp"
            android:layout_height="18dp"/>

        <com.hjq.shape.layout.ShapeRelativeLayout
            android:id="@+id/sl_top_s"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:shape="rectangle"
            app:shape_radius="9dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="66dp"
            app:shape_solidColor="#3465FF"
            android:layout_width="match_parent"
            android:layout_height="147dp">
            <TextView
                android:id="@+id/tv_title"
                android:textStyle="bold"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="13dp"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="工控设备123"
                android:textColor="#ffffffff"
                android:textSize="12dp"
                />
            <ImageView
                android:id="@+id/img_refresh"
                android:layout_alignParentTop="true"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_refresh"
                android:layout_width="20dp"
                android:padding="6dp"
                android:layout_height="20dp"/>
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/img_refresh"
                android:text="实时刷新更新于 19:23"
                android:textColor="#ffffffff"
                android:textSize="8dp"
                />
            <com.hjq.shape.layout.ShapeLinearLayout
                android:id="@+id/sl_signal_intensity"
                android:layout_marginTop="6dp"
                android:layout_below="@+id/tv_title"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:shape="rectangle"
                app:shape_radius="6dp"
                android:gravity="center"
                android:layout_marginLeft="12dp"
                app:shape_solidColor="#4B7AFE"
                android:layout_width="77dp"
                android:layout_height="11dp">
                <ImageView
                    android:layout_toLeftOf="@+id/tv_strength"
                    android:src="@mipmap/ic_base_station"
                    android:layout_width="6dp"
                    android:layout_height="6dp"/>
                <TextView
                    android:text="@{viewModel.mainBase.signalStrength}"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="7sp"
                    />
            </com.hjq.shape.layout.ShapeLinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="54dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.mainBase.time}"
                    android:textColor="#ffffffff"
                    android:textSize="8dp"
                    />
                <TextView
                    android:text="@{viewModel.mainBase.times}"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffffff"
                    android:textSize="16dp"
                    />
            </LinearLayout>

            <com.hjq.shape.layout.ShapeLinearLayout
                android:id="@+id/sl_signal"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                app:shape="rectangle"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                app:shape_radius="4dp"
                android:gravity="center"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="11dp"
                app:shape_solidColor="#4B7AFE"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/ic_normal"
                            android:layout_width="8dp"
                            android:layout_height="8dp"/>
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正常"
                            android:textColor="#ffffffff"
                            android:textSize="9sp"
                            />
                    </LinearLayout>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前状态"
                        android:textColor="#ffffffff"
                        android:textSize="7dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/ic_normal"
                            android:layout_width="8dp"
                            android:layout_height="8dp"/>
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正常"
                            android:textColor="#ffffffff"
                            android:textSize="9sp"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="冷却状态"
                        android:textStyle="bold"
                        android:textColor="#ffffffff"
                        android:textSize="7dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/ic_normal"
                            android:layout_width="8dp"
                            android:layout_height="8dp"/>
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正常"
                            android:textColor="#ffffffff"
                            android:textSize="9sp"
                            />
                    </LinearLayout>
                    <TextView
                        android:textStyle="bold"
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="加热状态"
                        android:textColor="#ffffffff"
                        android:textSize="7dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/ic_normal"
                            android:layout_width="8dp"
                            android:layout_height="8dp"/>
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正常"
                            android:textColor="#ffffffff"
                            android:textSize="9sp"
                            />
                    </LinearLayout>
                    <TextView

                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="水泵状态"
                        android:textColor="#ffffffff"
                        android:textSize="7dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@mipmap/ic_normal"
                            android:layout_width="8dp"
                            android:layout_height="8dp"/>
                        <TextView
                            android:layout_marginLeft="2dp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="正常"
                            android:textColor="#ffffffff"
                            android:textSize="9sp"
                            />
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="补水状态"
                        android:textColor="#ffffffff"
                        android:textSize="7dp"
                        />

                </LinearLayout>
            </com.hjq.shape.layout.ShapeLinearLayout>

        </com.hjq.shape.layout.ShapeRelativeLayout>

        <TextView
            android:id="@+id/tv_title_bar"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="11dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sl_top_s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备详情"
            android:textStyle="bold"
            android:textColor="#ff273542"
            android:textSize="12dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            app:spanCount="3"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_bar"
            android:id="@+id/rv_project"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>