<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:binding="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View" />
        <import type="android.text.InputType" />
        <variable name="viewModel"  type="com.cn.main_library.viewmodel.MainViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#00FFFFFF"
        android:id="@+id/content"
        android:layout_height="match_parent">


        <com.hjq.shape.layout.ShapeRelativeLayout
            android:id="@+id/sl_top"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            app:shape="rectangle"
            app:shape_radius="3dp"
            app:shape_solidColor="#3B0075A9"
            android:layout_width="match_parent"
            android:layout_height="26dp">
            <LinearLayout
                android:visibility="invisible"
                android:id="@+id/ll_warn"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginRight="7dp"
                    android:src="@mipmap/ic_warn_main"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报警"
                    android:textColor="#ffff2222"
                    android:textSize="10sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_strength"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.mainBase.signalStrength}"
                android:textColor="#ffffffff"
                android:textSize="11sp"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/tv_strength"
                android:src="@mipmap/ic_base_station"
                android:layout_marginRight="6dp"
                android:layout_width="9dp"
                android:layout_height="10dp"/>
        </com.hjq.shape.layout.ShapeRelativeLayout>

        <com.hjq.shape.layout.ShapeLinearLayout
            android:layout_marginTop="22dp"
            android:id="@+id/sl_tabulation"
            app:layout_constraintTop_toBottomOf="@+id/sl_top"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="17dp"
            android:layout_width="146dp"
            android:layout_height="246dp"
            android:text="边框色按压效果"
            android:orientation="vertical"
            android:textSize="14sp"
            app:shape="rectangle"
            app:shape_radius="3.13dp"
            app:shape_solidColor="#CC001B3F"
            app:shape_strokeColor="#CDCDCD"
            app:shape_strokeWidth="0.63dp" >
            <com.hjq.shape.layout.ShapeRelativeLayout
                android:layout_marginTop="10.33dp"
                android:layout_marginLeft="7.33dp"
                android:layout_marginRight="6dp"
                android:layout_width="132dp"
                android:layout_height="70dp"
                android:textSize="14sp"
                app:shape="rectangle"
                app:shape_radius="3.13dp"
                app:shape_solidColor="#03124D"
                app:shape_strokeColor="#30cdcdcd"
                app:shape_strokeWidth="0.63dp" >
                <com.hjq.shape.layout.ShapeRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:shape_endColor="#30cdcdcd"
                    binding:onClickCommand="@{viewModel.onClickTemperature}"
                    app:shape_solidPressedColor="#00CDCDCD"
                    app:shape_startColor="#00CDCDCD"
                    app:shape="rectangle"
                    app:shape_angle="90"
                    app:shape_radius="3.13dp" />
                <TextView
                    android:includeFontPadding="false"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设定温度"
                    android:textColor="#ffffffff"
                    android:textSize="12dp"
                    />
                <TextView
                    android:id="@+id/tv_setting_temperature"
                    android:includeFontPadding="false"
                    android:layout_marginTop="26dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.mainBase.settingTemperature}"
                    android:layout_marginLeft="15dp"
                    android:textColor="#ff47a3e9"
                    android:textSize="33dp"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="47dp"
                    android:layout_toRightOf="@+id/tv_setting_temperature"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"
                    android:textColor="#ffa1a1a1"
                    android:textSize="10sp"
                    />
            </com.hjq.shape.layout.ShapeRelativeLayout>

            <com.hjq.shape.layout.ShapeRecyclerView
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:id="@+id/rv_project"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="7.33dp"
                android:layout_marginRight="6dp"
                android:layout_width="132dp"
                android:layout_height="149dp"
                android:textSize="14sp"
                app:shape="rectangle"
                app:shape_radius="3dp"
                app:shape_solidColor="#03124D">

            </com.hjq.shape.layout.ShapeRecyclerView>
        </com.hjq.shape.layout.ShapeLinearLayout>
        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sl_tabulation"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.mainBase.device}"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            />
        <com.ijcsj.ui_library.widget.dashboardview.view.DashboardView
            setPercent="@{viewModel.mainBase.temperature}"
            app:layout_constraintTop_toBottomOf="@+id/sl_top"
            app:layout_constraintLeft_toRightOf="@+id/sl_tabulation"
            android:layout_marginLeft="12dp"
            android:id="@+id/dashboardView"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text=""
            app:unit=" "
            app:progressStrokeWidth="5dp"
            app:tikeStrArray="@array/meter1"
            app:tikeStrColor="#F2A141"
            app:tikeStrSize="7dp"
            app:maxNumber="200"
            app:centerCircleColor="#00FFFFFF"/>
        <TextView
            android:layout_marginLeft="44dp"
            android:layout_marginTop="-20dp"
            app:layout_constraintLeft_toRightOf="@+id/sl_tabulation"
            app:layout_constraintTop_toBottomOf="@+id/dashboardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回煤温度"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            />


        <com.ijcsj.ui_library.widget.dashboardview.view.DashboardView
            setPercent="@{viewModel.mainBase.pressure}"
            app:layout_constraintTop_toBottomOf="@+id/sl_top"
            app:layout_constraintLeft_toRightOf="@+id/dashboardView"
            android:layout_marginLeft="21dp"
            android:id="@+id/dashboardView1"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text=""
            app:unit=" "
            app:progressStrokeWidth="5dp"
            app:tikeStrArray="@array/meter"
            app:tikeStrColor="#F2A141"
            app:tikeStrSize="7dp"
            app:maxNumber="20"
            app:centerCircleColor="#00FFFFFF"/>
        <TextView
            android:layout_marginLeft="54dp"
            android:layout_marginTop="-20dp"
            app:layout_constraintLeft_toRightOf="@+id/dashboardView"
            app:layout_constraintTop_toBottomOf="@+id/dashboardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回煤压力"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            />

        <com.ijcsj.ui_library.widget.dashboardview.view.DashboardView
            setPercent="@{viewModel.mainBase.flow}"
            app:layout_constraintTop_toBottomOf="@+id/sl_top"
            app:layout_constraintLeft_toRightOf="@+id/dashboardView1"
            android:layout_marginLeft="21dp"
            android:id="@+id/dashboardView2"
            android:layout_width="109dp"
            android:layout_height="109dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text=""
            app:unit=" "
            app:progressStrokeWidth="5dp"
            app:tikeStrArray="@array/meter2"
            app:tikeStrColor="#F2A141"
            app:tikeStrSize="7dp"
            app:maxNumber="60"
            app:centerCircleColor="#00FFFFFF"/>
        <TextView
            android:layout_marginLeft="54dp"
            android:layout_marginTop="-20dp"
            app:layout_constraintLeft_toRightOf="@+id/dashboardView1"
            app:layout_constraintTop_toBottomOf="@+id/dashboardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="回煤流量"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            />
        <com.hjq.shape.layout.ShapeRelativeLayout
            android:layout_marginTop="13dp"
            android:id="@+id/sp_dashboardView"
            app:layout_constraintLeft_toRightOf="@+id/sl_tabulation"
            app:layout_constraintTop_toBottomOf="@+id/dashboardView"
            android:layout_marginLeft="11dp"
            android:layout_width="115dp"
            android:layout_height="35dp"
            app:shape="rectangle"
            app:shape_radius="1.8dp"
            app:shape_solidColor="#331B56A5"
            app:shape_strokeColor="#30CDCDCD"
            app:shape_strokeWidth="0.63dp" >
            <LinearLayout
                android:background="@mipmap/ic_bg_title"
                android:gravity="center"
                android:layout_width="115dp"
                android:layout_height="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.mainBase.temperatureString}"
                    android:textSize="24sp"
                    tv_color="@{viewModel.mainBase.warn1}"
                    />
                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="℃"
                    android:textColor="#ffa1a1a1"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </com.hjq.shape.layout.ShapeRelativeLayout>
        <com.hjq.shape.layout.ShapeRelativeLayout
            android:layout_marginTop="13dp"
            android:id="@+id/sp_dashboardView1"
            app:layout_constraintLeft_toRightOf="@+id/sp_dashboardView"
            app:layout_constraintTop_toBottomOf="@+id/dashboardView"
            android:layout_marginLeft="13dp"
            android:layout_width="115dp"
            android:layout_height="35dp"
            app:shape="rectangle"
            app:shape_radius="1.8dp"
            app:shape_solidColor="#331B56A5"
            app:shape_strokeColor="#30CDCDCD"
            app:shape_strokeWidth="0.63dp" >
            <LinearLayout
                android:background="@mipmap/ic_bg_title"
                android:gravity="center"
                android:layout_width="115dp"
                android:layout_height="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.mainBase.pressureString}"
                    tv_color="@{viewModel.mainBase.warn2}"
                    android:textSize="24sp"
                    />
                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bar"
                    android:textColor="#ffa1a1a1"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </com.hjq.shape.layout.ShapeRelativeLayout>


        <com.hjq.shape.layout.ShapeRelativeLayout
            android:layout_marginTop="13dp"
            android:id="@+id/sp_dashboardView2"
            app:layout_constraintLeft_toRightOf="@+id/sp_dashboardView1"
            app:layout_constraintTop_toBottomOf="@+id/dashboardView"
            android:layout_marginLeft="13dp"
            android:layout_width="115dp"
            android:layout_height="35dp"
            app:shape="rectangle"
            app:shape_radius="1.8dp"
            app:shape_solidColor="#331B56A5"
            app:shape_strokeColor="#30CDCDCD"
            app:shape_strokeWidth="0.63dp" >
            <LinearLayout
                android:background="@mipmap/ic_bg_title"
                android:gravity="center"
                android:layout_width="115dp"
                android:layout_height="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.mainBase.flowString}"
                    tv_color="@{viewModel.mainBase.warn3}"
                    android:textSize="24sp"
                    />
                <TextView
                    android:layout_marginLeft="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L/min"
                    android:textColor="#ffa1a1a1"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </com.hjq.shape.layout.ShapeRelativeLayout>


        <LinearLayout
            android:id="@+id/ll_"
            android:layout_marginTop="39dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="103dp"
            app:layout_constraintLeft_toRightOf="@+id/sl_tabulation"
            app:layout_constraintTop_toBottomOf="@+id/sp_dashboardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="@{viewModel.mainBase.isWaterPump?View. VISIBLE:View.GONE}"
                android:gravity="center|left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="水泵"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    />
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:src="@mipmap/ic_water_pump"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="@{viewModel.mainBase.isHeat?View. VISIBLE:View.GONE}"
                android:layout_marginLeft="22dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="加热"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    />
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:src="@mipmap/ic_heat"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="@{viewModel.mainBase.isMoisturizing?View. VISIBLE:View.GONE}"
                android:layout_marginLeft="26dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="补水"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    />
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:src="@mipmap/ic_moisturizing"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="@{viewModel.mainBase.isBurial?View. VISIBLE:View.GONE}"
                android:layout_marginLeft="32dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="冷却"
                    android:textColor="#ffffffff"
                    android:textSize="13sp"
                    />
                <ImageView
                    android:layout_marginLeft="6dp"
                    android:src="@mipmap/ic_burial"
                    android:layout_width="18dp"
                    android:layout_height="18dp"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            binding:onClickCommand="@{viewModel.onSwitchClick}"
            android:layout_marginTop="17dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/sp_dashboardView"
            app:layout_constraintRight_toRightOf="parent"
            type="@{viewModel.mainBase.istype}"
            android:layout_width="61dp"
            android:layout_height="61dp"/>
        <TextView
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sl_tabulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.mainBase.workStatusProcess}"
            android:textColor="#ffffffff"
            android:textSize="11sp"
            />

        <TextView
            android:layout_marginRight="19dp"
            android:layout_marginTop="16dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sl_tabulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.mainBase.time}"
            android:textColor="#ffffffff"
            android:textSize="12sp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>