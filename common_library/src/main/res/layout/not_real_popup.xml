<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_solidColor="#00FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="416dp">

    <com.hjq.shape.layout.ShapeRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:shape="rectangle"
        app:shape_radius="20dp"
        app:shape_solidColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="393dp">
        <ImageView
            android:id="@+id/img_top"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="50dp"
           android:src="@mipmap/ic_not_real_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
     <ImageView
         android:id="@+id/img_bg"
            android:layout_below="@+id/img_top"
             android:layout_marginTop="39dp"
             android:src="@mipmap/ic_not_real_bg"
            android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.hjq.shape.view.ShapeTextView
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="6dp"
            android:id="@+id/tv_right_t"
            android:gravity="center"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="24dp"
            android:layout_below="@+id/img_bg"
            app:shape="rectangle"
            app:shape_angle="121"
            app:shape_endColor="#FE8400"
            app:shape_radius="180dp"
            app:shape_startColor="#FD9A01"
            android:layout_height="6dp"/>
        <TextView
            android:layout_toRightOf="@+id/tv_right_t"
            android:layout_marginTop="56dp"
            android:layout_marginLeft="6dp"
            android:layout_below="@+id/img_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="需实名认证完成后，才可进行提现操作"
            android:textColor="#fffd9a01"
            android:textSize="14sp"
            />
        <com.hjq.shape.view.ShapeTextView
            android:layout_gravity="center_horizontal|bottom"
            android:layout_width="6dp"
            android:id="@+id/tv_right_t_1"
            android:gravity="center"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="24dp"
            android:layout_below="@+id/tv_right_t"
            app:shape="rectangle"
            app:shape_angle="121"
            app:shape_endColor="#FE8400"
            app:shape_radius="180dp"
            app:shape_startColor="#FD9A01"
            android:layout_height="6dp"/>
        <TextView
            android:layout_toRightOf="@+id/tv_right_t_1"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/tv_right_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证需填写正确的信息"
            android:textColor="#fffd9a01"
            android:textSize="14sp"
            />


    </com.hjq.shape.layout.ShapeRelativeLayout>
    <com.hjq.shape.view.ShapeTextView
        android:layout_gravity="center_horizontal|bottom"
        android:layout_width="178dp"
        android:text="朕知道了"
        android:id="@+id/tv_right"
        android:textColor="#fff"
        android:textSize="13sp"
        android:gravity="center"
        app:shape="rectangle"
        app:shape_angle="121"
        app:shape_endColor="#FE8400"
        app:shape_radius="36dp"
        app:shape_startColor="#FD9A01"
        android:layout_height="46dp"/>
</FrameLayout>


