<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:shape_solidColor="#00FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.hjq.shape.layout.ShapeRelativeLayout
        app:shape="rectangle"
        app:shape_radius="20dp"
        app:shape_solidColor="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="401dp">
    <com.hjq.shape.view.ShapeTextView
        app:shape="rectangle"

        app:shape_topLeftRadius="20dp"
        app:shape_topRightRadius="20dp"
        app:shape_angle="121"
        app:shape_startColor="#FD9A01"
        app:shape_endColor="#FE8400"
        android:layout_width="match_parent"
        android:layout_height="112dp"/>
        <ImageView
            android:id="@+id/img_top"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="53dp"
            android:src="@mipmap/ic_success_real_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="180dp"
            android:id="@+id/cv_img"
            android:layout_marginTop="77dp">
            <ImageView
                android:id="@+id/img_crop"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_s1"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/cv_img"
            android:layout_centerHorizontal="true"
            android:layout_width="126dp"
            android:layout_height="28dp"
            android:text="您已实名认证"
            android:textColor="#ffd8d8d8"
            android:textSize="21sp"
            />
        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="32dp"
            android:layout_below="@+id/tv_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="#ff666666"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_name"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="149dp"
            android:layout_below="@+id/tv_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="14sp"
            />
        <TextView
            android:layout_marginTop="83dp"
            android:layout_marginLeft="32dp"
            android:layout_below="@+id/tv_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="身份证号"
            android:textColor="#ff666666"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/tv_ip"
            android:layout_marginTop="83dp"
            android:layout_marginLeft="149dp"
            android:layout_below="@+id/tv_s1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff999999"
            android:textSize="14sp"
            />
    </com.hjq.shape.layout.ShapeRelativeLayout>
    <com.hjq.shape.view.ShapeTextView
        android:layout_gravity="center_horizontal"
        android:layout_width="2dp"
        android:textColor="#fff"
        android:textSize="13sp"
        android:gravity="center"
        app:shape="rectangle"
        app:shape_angle="121"
        app:shape_startColor="#fff"
        app:shape_endColor="#fff"
        app:shape_radius="2dp"
        android:layout_height="72dp"/>
    <ImageView
        android:id="@+id/tv_right"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_id_t"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

</LinearLayout>


